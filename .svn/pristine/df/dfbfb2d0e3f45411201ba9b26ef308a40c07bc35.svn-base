@charset "UTF-8";

/*
	SignUp 페이지에서 사용할 Style
*/

.box {
	display: inline-block;
}

.label {
	width: 160px;
	height: 15px;
	padding-top: 5px;
	margin-bottom: 5px;
	margin-right: 25px;
	text-align: right;
	vertical-align: top;
}

.require {
	color: #ff0000;
}

input[type='text'], input[type='password'], select {
	width: 130px;
	height: 20px;
	padding-left: 7px;
	padding-right: 7px;
	padding-top: 3px;
	padding-bottom: 3px;
	border-radius: 5px;
	border: 1px solid #dddddd;
}


select {
	height: 30px;
}

