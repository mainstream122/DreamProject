@charset "UTF-8";
.category-sort-select-wrap {
	width: 100%;
	height: 158px;
	padding-top: 50px;
	padding-bottom: 110px;
	border-top: 1px solid #EAEAEA;
	margin-top: 50px;
	
}
.category-sort-select-wrap > *{
	width:930px;
	margin: 0 auto;
}
.category-sort-select-wrap p {

	height: 18px;
	margin-bottom: 15px;
	color: #707070;
    font-family: '돋움',dotum,sans-serif;
    font-size: 12px;
    line-height: 1.5;
}

.category-sort-select{

}
.category-sort-select  a{
	width: 130px;
	height: 123px;
	border-top: 1px solid #EAEAEA;
	border-right: 1px solid #EAEAEA;
	border-bottom: 1px solid #EAEAEA;
	display: inline-block;
	float: left;
}
.category-sort-select  a:first-child {
	border-left: 1px solid #EAEAEA;
}
