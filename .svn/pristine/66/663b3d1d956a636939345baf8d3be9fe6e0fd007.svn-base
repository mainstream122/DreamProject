@charset "UTF-8";

#subtitle-area {
	position: relative;
	padding-top: 40px;
	width: 930px;
	height: 43px;
	border-bottom: 1px solid #eaeaea;
	margin: 0 auto;
}
#subtitle-area > img {
}
.location {
	position: absolute;
    top: 50px;
    right: 0;
    font-size: 11px;
    line-height: 1.2;
}
.location em {
    margin-left: 2px;
    padding-left: 7px;
    
    color: #55769f;
}
.location a {
    margin-left: 2px;
    padding-left: 7px;
    color: #747474;
}
#article {
	position: relative;
	width: 930px;
	margin: 0 auto;
	padding-top: 40px;
}
.title-area {
	width: 400px;
	height: 126px;
}
.title-area img {
	float: left;
	margin-bottom: 20px;
}
.title-area img:last-child {
	margin-bottom: 0px;
}

.title-area2 {
	position: absolute;
	top: 40px;
	left: 400px;
	width: 530px;
	height: 126px;
}
.customer_inquiry_information{
	width: 100%;
	margin-top: 50px;
    border-top: 2px solid #565d6a;
    border-bottom: 1px solid #e4e4e4;
}
.customer_inquiry_information img {
	border-right: 1px solid #eaeaea;
	float: left;
	
}
.customer_inquiry_information img:first-child {
	border-left: 0px;
}
